type User {
  id: ID!
  email: String!
  name: String!
  todos: [Todo!]!
}

extend type Query {
  users: [User!]!
}

input CreateUserInput {
  email: String!
  name: String!
}

input UpdateUserInput {
  id: ID!
  email: String
  name: String
}

extend type Mutation {
  createUser(input: CreateUserInput!): User!
  updateUser(input: UpdateUserInput!): User!
  deleteUser(id: ID!): Boolean!
}
