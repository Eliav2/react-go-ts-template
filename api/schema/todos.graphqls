type Query {
  todos: [Todo!]!
}

type Todo {
  id: ID!
  title: String!
  completed: Boolean!
  user: User
  userId: ID
}

input CreateTodoInput {
  title: String!
  userId: ID
}

input UpdateTodoInput {
  id: ID!
  title: String
  done: Boolean
}

type Mutation {
  createTodo(input: CreateTodoInput!): Todo!
  updateTodo(input: UpdateTodoInput!): Todo!
  deleteTodo(id: ID!): Boolean!
}
